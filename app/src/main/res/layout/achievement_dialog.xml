<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:padding="16dp"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="300dp"
    android:layout_height="400dp"
    android:background="#1c1b1f"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <ImageView
            android:id="@+id/achievement_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/achievement_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="This is the achievement status"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/achievement_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="This is the achievement name"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/gray"/>

        <TextView
            android:id="@+id/achievement_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="This is the achievement description"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/gray"/>

        <Button
            android:id="@+id/close_achievement_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:gravity="center"
            android:backgroundTint="@color/gray"
            android:text="OK"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="normal" />

    </LinearLayout>